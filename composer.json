{
	"name": "tomkyle/configreader",

	"description": "Successor of germania-kg/configreader: Merge default and custom configuration files with Symfony YAML. Supports CacheItemPools. ",

	"license": "MIT",
	"authors": [
		{
			"name": "Carsten Witt",
			"email": "tomkyle@posteo.de",
			"role": "Developer"
		}
	],
	"autoload": {
		"psr-4": {
			"Germania\\ConfigReader\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"tests\\": "tests/src/"
		}
	},

	"require": {
		"php": "^8.1",
		"psr/log": "^2.0|^3.0",
		"psr/cache": "^2.0|^3.0",
		"symfony/yaml": "^6.1|^7.0",
		"germania-kg/cachecallable": "^2.0"
	},

	"require-dev": {
		"php-coveralls/php-coveralls": "^2.0",
		"phpunit/phpunit": "^10.0",
		"phpspec/prophecy-phpunit": "^2.0",
		"monolog/monolog": "^2.1|^3.0",
		"phpstan/phpstan": "^1.9"
	},

  "suggest": {
      "tedivm/stash": "Good caching solution"
  },

	"scripts": {
			"phpunit": "phpunit --coverage-text",
			"phpunit:clover": "phpunit --coverage-clover tests/build/clover.xml",

  	"test": [
    	"@phpunit"
		]
	}
}
